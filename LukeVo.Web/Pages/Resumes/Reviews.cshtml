<section id="section-review">

    <div class="card-column">
        @for (int i = 1; i < 4; i++)
        {
            <div>
                <div class="card hover">
                    <div class="card-quote">
                        <p>@($"Review_Content{i}".LookupHtml())</p>

                        <div class="source">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i><br />
                            —
                            <a target="_blank" href="@($"Review_Link{i}".Lookup())">
                                @($"Review_Title{i}".Lookup())
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>